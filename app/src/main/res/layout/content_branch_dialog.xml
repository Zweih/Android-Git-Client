<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.gaurav.gitfetchapp.Repositories.BranchDialogActivity"
    tools:showIn="@layout/activity_branch_dialog">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_branch_recycler"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true"/>

    <Button
        android:id="@+id/branch_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/branch_cancel"
        android:background="@android:color/transparent"
        android:layout_below="@+id/dialog_branch_recycler"
        android:textColor="@color/green700"
        android:textSize="16sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/cancel_button"/>

</RelativeLayout>
